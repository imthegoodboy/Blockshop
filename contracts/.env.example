# Contracts .env example
# RPC for Polygon Amoy (or Mumbai) testnet
AMOY_RPC_URL=https://rpc-amoy.polygon.technology
# Private key of deployer/account used to deploy contracts (keep secret!)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
# Address that receives platform fees (in checks/owner role)
FEE_RECIPIENT=0xYOUR_FEE_RECIPIENT_ADDRESS
# Platform fee in basis points (2000 = 20%)
PLATFORM_FEE_BPS=2000
# Optional: Polygonscan API key to verify contracts
POLYGONSCAN_API_KEY=
